<h1>Update <%= @album.name() %></h1>

<form action="/albums/<%= @album.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Rename album</label>
  <input id="name" name="name" type="text" class="form-control">
  <label for="artist">Rename artist</label>
  <input id="artist" name="artist" type="text" class="form-control">
  <label for="year">Rename year</label>
  <input id="year" name="year" type="text" class="form-control">
  <label for="genre">Rename genre</label>
  <input id="genre" name="genre" type="text" class="form-control">

  <button type="submit" class="btn btn-primary">Update</button>

</form>

<form action="/albums/<%= @album.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit" class="btn btn-primary">Delete album</button>
</form>

<p><a href="/albums">Return to album list</a></p>
